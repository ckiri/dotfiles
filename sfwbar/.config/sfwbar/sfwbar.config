TriggerAction "SIGRTMIN+1", SwitcherEvent "forward"
TriggerAction "SIGRTMIN+2", SwitcherEvent "back"

# Override gtk theme
theme = "Adwaita-dark"
# Override gtk icon theme
IconTheme = "Papirus"

function("SfwbarInit") {
  SetLayer "top"
  SetBarSize "100%"
  SetMirror "*"
}

include("winops.widget")

layout {

  include("startmenu.widget")

  taskbar {
    style = "taskbar"
    rows = 1;
    icons = true;
    labels = true;
    sort = false;
    action[3] = Menu "winops"
  }

  label {
    css = "* { -GtkWidget-hexpand: true; }"
  }

  tray {
    rows = 1
  }

  include("volume.widget")
  include("battery-svg.widget")

  label {
    value = Time("%a, %d.%m.%y %k:%M")
    style = "clock"
  }
}

#CSS

/* Configure sfwbar (just the bar, not inner elements) */
window#sfwbar {
  -GtkWidget-direction: top;
}

/* Globally defined button */
button {
  margin: 1px;
  padding: 1px;
  background: none;
  box-shadow: none;
  border: none;
}

/* Globally defines images in buttons */
button#image {
  outline-style: none;
  box-shadow: none;
  background-image: none;
  border-image: none;
}

image {
  -ScaleImage-symbolic: true;
}

/* Set styling for starmenu button, left empty -> default value */
button#startmenu,

/* Button modules, such as tray, bat, vol and starmenu */
button#module {
  -GtkWidget-vexpand: true;
}

button#module image {
  padding: 2px;
  margin: 2px;
  -GtkWidget-valign: center;
  -GtkWidget-vexpand: true;
}

button#taskbar_normal,
button#taskbar_active,

button#taskbar_normal {
  color: #bbbbbb;
  text-shadow: none;
}

button#taskbar_active {
  color: #ffffff;
  text-shadow: none; 
}

button#taskbar_normal:hover {
  transition: 0.05s;
  text-shadow: none;
}

button#taskbar_normal grid,
button#taskbar_active grid,
button#taskbar_normal:hover grid {
  -GtkWidget-valign: center;
}

button#taskbar_normal image,
button#taskbar_active image,
button#taskbar_normal:hover image {
  padding: 2px;
  margin: 2px; 
  -ScaleImage-symbolic: false;
}

button#taskbar_normal label,
button#taskbar_active label,
button#taskbar_normal:hover label {
}

button#tray_active {
  margin: 2px;
  padding: 2px;
  border: none;
}

button#tray_passive,
button#tray_attention {
  margin: 2px;
  border: none;
  padding: 2px;
}

button#tray_passive {
  -GtkWidget-visible: false;
}

button#tray_active image,
button#tray_passive image,
button#tray_attention image {
  -GtkWidget-valign: center;
  -GtkWidget-vexpand: true;
  min-height: 16px;
  min-width: 16px;
  padding: 2px;
  margin: 0px;
  border: none;
}

button#tray_active:hover {
  margin: 2px;
  padding: 2px;
  background: none;
}

#menu_item,
#menu_item image,
#menu_item label {
  -GtkWidget-halign: start;
}

#menu_item image {
  min-width: 16px;
  min-height: 16px;
  padding-right: 2px;
}

label#clock {
  padding-left: 2px;
  padding-right: 2px;
  -GtkWidget-vexpand: true;
  -GtkWidget-valign: center;
}
