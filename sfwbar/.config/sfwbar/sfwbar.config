TriggerAction "SIGRTMIN+1", SwitcherEvent "forward"
TriggerAction "SIGRTMIN+2", SwitcherEvent "back"

# Override gtk theme
# theme = "Adwaita-dark"
# Override gtk icon theme
IconTheme = "Papirus"

function("SfwbarInit") {
  SetLayer "top"
  SetBarSize "100%"
  SetMirror "*"
}

# Window Placer
placer {
  xorigin = 5  # place the first window at X% from the left
  yorigin = 5  # place the first window at X% from the top
  xstep = 5    # step by X% of desktop horizontally
  ystep = 5    # step by X% of desktop vertically
  children = true
}

# Task Switcher
switcher {
  interval = 700
  icons = true
  labels = false
  cols = 5
}

include("winops.widget")

layout {

  include("startmenu.widget")

  pager {
    style = "pager"
    rows = 1
    preview = false
  }

  taskbar {
    style = "taskbar"
    rows = 1;
    icons = true;
    labels = true;
    sort = false;
    action[3] = Menu "winops"
  }

  label {
    css = "* { -GtkWidget-hexpand: true; }"
  }

  tray {
    rows = 1
  }

  include("cpu.widget")
  include("memory.widget")
  include("battery-svg.widget")
  include("pulse-module.widget")

  label {
    value = Time("%x, %k:%M")
    style ="clock"
  }
}

#CSS

/* Configure sfwbar (just the bar, not inner elements) */
window#sfwbar {
  -GtkWidget-direction: top;
}

/* Globally defined button */
button {
  margin: 2px;
  padding: 2px;
  background: none;
  box-shadow: none;
  border: none;
}

/* Globally defines images in buttons */
button#image {
  outline-style: none;
  box-shadow: none;
  background-image: none;
  border-image: none;
}

image {
  -ScaleImage-symbolic: true;
}

/* Set styling for starmenu button, left empty -> default value */
button#startmenu,

/* Button modules, such as tray, bat, vol and starmenu */
button#module {
  -GtkWidget-vexpand: true;
}

button#module image {
  padding: 2px;
  margin: 5px;
  -GtkWidget-valign: center;
  -GtkWidget-vexpand: true;
}

button#taskbar_normal,
button#taskbar_active,

button#taskbar_normal {
  border: none;
  margin: 5px;
  padding: 2px;
  -GtkWidget-hexpand: false;
  box-shadow: none;
  border: none;
}

button#taskbar_active {
  margin: 5px;
  padding: 2px;
  border-radius: 4px;
  border-width: 1px;
  -GtkWidget-hexpand: false;
  box-shadow: 0px 0px 2px rgba(0, 0, 0, 0.8);
}

button#taskbar_normal:hover {
  background: none;
  margin: 5px;
  padding: 2px;
  border-radius: 4px;
  border-width: 1px;
  -GtkWidget-hexpand: false;
  box-shadow: 0px 0px 2px rgba(0, 0, 0, 0.8);
  transition: 0.05s;
}

button#taskbar_normal grid,
button#taskbar_active grid,
button#taskbar_normal:hover grid {
  -GtkWidget-valign: center;
}

button#taskbar_normal image,
button#taskbar_active image,
button#taskbar_normal:hover image {
  padding: 2px;
  margin: 2px; 
  -ScaleImage-symbolic: false;
}

button#taskbar_normal label,
button#taskbar_active label,
button#taskbar_normal:hover label {
}

button#tray_active {
  margin: 5px;
  padding: 2px;
  border: none;
}

button#tray_passive,
button#tray_attention {
  margin: 0px;
  border: none;
  padding: 2px;
}

button#tray_passive {
  -GtkWidget-visible: false;
}

button#tray_active image,
button#tray_passive image,
button#tray_attention image {
  -GtkWidget-valign: center;
  -GtkWidget-vexpand: true;
  min-height: 16px;
  min-width: 16px;
  padding: 2px;
  margin: 0px;
  border: none;
}

button#tray_active:hover {
  margin: 5px;
  padding: 2px;
  background: none;
}

button#pager, 
button#pager_normal,
button#pager_visible,
button#pager_focused,
button#pager_preview,

button#pager_focused {
  background: none;
  border: none;
  outline: 0px;
  margin: 2px;
  padding: 2px;
  -GtkWidget-halign: center;
  -GtkWidget-valign: center;
}

button#pager_focused {
  margin: 5px;
  padding: 2px;
  border-radius: 4px;
  border-width: 1px;
  -GtkWidget-hexpand: false;
  box-shadow: 0px 0px 2px rgba(0, 0, 0, 0.8);
}

button#pager_preview {
  background: none;
  border-radius: 0;
  border-color: #000000;
  border-width: 0.25mm;
  color: #777777;
  min-width: 5cm;
  min-height: 2.8125cm;
}

#menu_item,
#menu_item image,
#menu_item label {
  -GtkWidget-halign: start;
}

#menu_item image {
  min-width: 16px;
  min-height: 16px;
  padding-right: 2px;
}

label#clock {
  padding-left: 2px;
  padding-right: 2px;
  -GtkWidget-vexpand: true;
  -GtkWidget-valign: center;
}

chart#cpu_chart {
  background: rgba(127,127,127,0.3);
  min-width: 9px;
  -GtkWidget-vexpand: true;
  margin: 2px;
  border: 1px solid @theme_fg_color;
  color: red;
}

progressbar#memory {
  -GtkWidget-direction: top;
  -GtkWidget-vexpand: true;
  min-width: 9px;
  border: 1px solid @theme_fg_color;
  margin: 2px;
}

progressbar#memory trough {
  min-height: 2px;
  min-width: 9px;
  border: none;
  border-radius: 0px;
  background: rgba(127,127,127,0.3);
}

progressbar#memory progress {
  -GtkWidget-hexpand: true;
  min-width: 9px;
  border-radius: 0px;
  border: none;
  margin: 0px;
  background-color: alpha(green,0.9);
}

grid#switcher_active image,
grid#switcher_active {
  background-color: #bbddff;
}

grid#switcher_active image,
grid#switcher_active,
grid#switcher_normal image,
grid#switcher_normal {
  min-width: 50px;
  min-height: 50px;
  border-radius: 5px;
  padding: 5px;
  -GtkWidget-direction: right;
  -GtkWidget-hexpand: true;
  -GtkWidget-direction: right;
  -ScaleImage-symbolic: false;
}

window#switcher { 
  border: 1px solid @borders;
  border-radius: 6px; 
  padding: 5px; 
  -GtkWidget-hexpand: true;
}

grid#switcher { 
  border-radius: 5px;
  padding: 5px;
  -GtkWidget-hexpand: true;
}
