<?xml version="1.0"?>
<labwc_config>
  <theme>
    <name>labwc-gtktheme</name>
    <cornerRadius>0</cornerRadius>
    <font name="Sans" size="10" />
  </theme>
  <keyboard>
    <default />
    <keybind key="A-Return">
      <action name="Execute" command="alacritty" />
    </keybind>
    <keybind key="A-r">
      <action name="Execute" command="wmenu-run" />
    </keybind>
    <keybind key="A-p">
      <action name="Execute" command="passmenu.sh" />
     </keybind>
    <keybind key="A-w">
      <action name="Execute" command="firefox" />
     </keybind>
    <keybind key="A-l">
      <action name="Execute" command="hyprlock" />
    </keybind>
    <keybind key="XF86_AudioLowerVolume">
      <action name="Execute" command="pulsemixer --change-volume -5" />
    </keybind>
    <keybind key="XF86_AudioRaiseVolume">
      <action name="Execute" command="pulsemixer --change-volume +5" />
    </keybind>
    <keybind key="XF86_AudioMute">
      <action name="Execute" command="pulsemixer --toggle-mute" />
    </keybind>
    <keybind key="XF86_MonBrightnessUp">
      <action name="Execute" command="brightnessctl set +1%" />
    </keybind>
    <keybind key="XF86_MonBrightnessDown">
      <action name="Execute" command="brightnessctl set 1%-" />
    </keybind>
    <keybind key="XF86_AudioPlay">
      <action name="Execute" command="mpc toggle" />
    </keybind>
    <keybind key="XF86_AudioNext">
      <action name="Execute" command="mpc next" />
    </keybind>
    <keybind key="XF86_AudioPrev">
      <action name="Execute" command="mpc prev" />
      </keybind>
    <keybind key="Print">
      <action name="Execute" command="wayshot.sh" />
    </keybind>
    <keybind key="A-c">
      <action name="Close" />
    </keybind>
    <keybind key="S-A-c">
      <action name="Kill" />
    </keybind>
    <keybind key="C-A-q">
      <action name="Exit" />
    </keybind>
    <keybind key="C-A-r">
      <action name="Reconfigure" />
    </keybind>
    <keybind key="S-A-h">
      <action name="SnapToEdge" direction="left" />
    </keybind>
    <keybind key="S-A-l">
      <action name="SnapToEdge" direction="right" />
    </keybind>
    <keybind key="S-A-o">
      <action name="ToggleAlwaysOnTop" />
    </keybind>
    <keybind key="S-A-k">
      <action name="ToggleMaximize" />
    </keybind>
    <keybind key="S-A-f">
      <action name="ToggleFullscreen" />
    </keybind>
    <keybind key="A-k">
      <action name="PreviousWindow" />
      </keybind>
    <keybind key="A-j">
      <action name="NextWindow" />
    </keybind>
    <keybind key="W-.">
      <action name="Execute" command="emojipicker.sh" />
    </keybind>
    <keybind key="W-t">
      <action name="Execute" command="timer.sh" />
    </keybind>
    <!--
      Remove a previously defined keybind
      A shorter alternative is <keybind key="W-F4" />
    -->
    <keybind key="W-F4">
      <action name="None" />
    </keybind>
  </keyboard>
  <mouse>
    <default />
    <!-- Show a custom menu on desktop right click -->
    <context name="Root">
      <mousebind button="Left" action="Press">
        <action name="ShowMenu" menu="some-custom-menu" />
      </mousebind>
    </context>
  </mouse>
  <libinput>
    <device category="touchpad">
      <naturalScroll>yes</naturalScroll>
    </device>
  </libinput>
</labwc_config>
