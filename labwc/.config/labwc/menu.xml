<?xml version="1.0" ?>
<openbox_menu>
  <menu id="root-menu" label="">
    <item label="Web Browser">
      <action name="Execute" command="firefox" />
    </item>
    <item label="E-Mail Client">
      <action name="Execute" command="thunderbird" />
    </item>
    <item label="Terminal">
      <action name="Execute" command="alacritty" />
    </item>
    <separator />
    <item label="Lock">
      <action name="Execute" command="swaylock -f" />
    </item>
    <menu id="power-menu" label="Power Options">
      <item label="Suspend">
        <action name="Execute" command="systemctl suspend-then-hibernate" />
      </item>
      <item label="Hibernate">
        <action name="Execute" command="systemctl hibernate" />
      </item>
      <item label="Poweroff">
        <action name="Execute" command="systemctl poweroff" />
      </item>
    </menu>
    <menu id="display-menu" label="Display Options">
      <item label="Mirror">
        <action name="Execute" command="kanshictl switch mirror" />
      </item>
      <item label="Extend Up (home)">
        <action name="Execute" command="kanshictl switch home-extend" />
      </item>
      <item label="Extend Right (home)">
        <action name="Execute" command="kanshictl switch home-extend-right" />
      </item>
      <item label="Extend Up">
        <action name="Execute" command="kanshictl switch extend" />
      </item>
      <item label="Extend to Right">
        <action name="Execute" command="kanshictl switch extend-right" />
      </item>
      <item label="Internal Only">
        <action name="Execute" command="kanshictl switch internal-only" />
      </item>
    </menu>
    <separator />
    <item label="Reconfigure">
      <action name="Reconfigure" />
    </item>
    <item label="Exit">
      <action name="Exit" />
    </item>
  </menu>
</openbox_menu>
